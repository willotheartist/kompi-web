generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// ---------------------------
/// NextAuth models (keep these!)
/// ----------------------------
model User {
  id             String      @id @default(cuid())
  email          String      @unique
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  image          String?
  name           String?
  passwordHash   String?
  marketingOptIn Boolean     @default(false)
  accounts       Account[]
  kCards         KCard[]
  krCodes        KRCode[]
  menus          Menu[]
  sessions       Session[]
  workspaces     Workspace[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

/// ---------------------------
/// Password Reset Flow
/// ---------------------------
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

model Workspace {
  id                   String            @id @default(cuid())
  name                 String
  slug                 String            @unique
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  ownerId              String
  plan                 Plan              @default(FREE)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  bioPages             BioPage[]
  contactForms         ContactForm[]
  courses              Course[]
  discountCodes        DiscountCode[]
  engagementEvents     EngagementEvent[]
  krCodes              KRCode[]
  links                Link[]
  loyaltyStamps        LoyaltyStamp[]
  subscriberLists      SubscriberList[]
  owner                User              @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tools                WorkspaceTool[]

  @@index([ownerId])
  @@index([slug])
}

model ClickEvent {
  id           String   @id @default(cuid())
  linkId       String
  createdAt    DateTime @default(now())
  ip           String?
  referer      String?
  referrerHost String?
  userAgent    String?

  // UTMs
  utmCampaign  String?
  utmContent   String?
  utmMedium    String?
  utmSource    String?
  utmTerm      String?

  // Geo
  country      String?  // ISO2 like "GB"
  region       String?  // optional: "England" / "CA"
  city         String?  // optional

  link         Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId, createdAt])
  @@index([utmCampaign])
  @@index([utmSource])
  @@index([utmMedium])
  @@index([referrerHost])
  @@index([country])
}



model BioPage {
  id          String    @id @default(cuid())
  workspaceId String
  slug        String    @unique
  title       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  theme       Json?
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

model KRCode {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  title       String?
  destination String
  shortCodeId String?
  style       Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  type        String?
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
}

model KCard {
  id        String   @id @default(cuid())
  userId    String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  isPublic  Boolean  @default(true)
  slug      String?  @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Menu {
  id            String   @id @default(cuid())
  userId        String
  title         String
  slug          String   @unique
  description   String?
  logoUrl       String?
  accentHex     String?
  sections      Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  backgroundHex String?
  scanCount     Int      @default(0)
  user          User     @relation(fields: [userId], references: [id])
}

model Link {
  id          String       @id @default(cuid())
  code        String?      @unique
  targetUrl   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)
  workspaceId String
  clicks      Int          @default(0)
  title       String?
  config      Json?
  type        LinkType     @default(DEFAULT)
  events      ClickEvent[]
  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([code])
  @@index([createdAt])
}

/// ---------------------------
/// Subscribers
/// ---------------------------
model SubscriberList {
  id          String       @id @default(cuid())
  workspaceId String
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  subscribers Subscriber[]
  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

model Subscriber {
  id            String         @id @default(cuid())
  listId        String
  email         String?
  phone         String?
  sourceSlug    String?
  sourceType    String?
  tags          String[]
  createdAt     DateTime       @default(now())
  loyaltyStamps LoyaltyStamp[]
  list          SubscriberList @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId])
  @@index([email])
}

/// ---------------------------
/// Contact Forms
/// ---------------------------
model ContactForm {
  id                  String              @id @default(cuid())
  workspaceId         String
  title               String
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  accentHex           String?
  autoReplyBody       String?
  autoReplySubject    String?
  buttonLabel         String?
  description         String?
  includeMessage      Boolean             @default(true)
  includeName         Boolean             @default(true)
  includePhone        Boolean             @default(false)
  includeSubject      Boolean             @default(false)
  notificationsEmail  String?
  spamHoneypotEnabled Boolean             @default(true)
  subjectOptions      String[]            @default([])
  successMessage      String?
  tags                String[]            @default([])
  themeCorners        String?
  themeFont           String?
  themeLayout         String?
  workspace           Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  submissions         ContactSubmission[]

  @@index([workspaceId])
}

model ContactSubmission {
  id        String      @id @default(cuid())
  formId    String
  name      String?
  email     String?
  message   String
  meta      Json?
  createdAt DateTime    @default(now())
  isSpam    Boolean     @default(false)
  phone     String?
  subject   String?
  tags      String[]    @default([])
  form      ContactForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@index([formId, createdAt])
}

/// ---------------------------
/// Discount Codes
/// ---------------------------
model DiscountCode {
  id               String    @id @default(cuid())
  workspaceId      String
  code             String
  description      String?
  isSubscriberOnly Boolean   @default(false)
  isActive         Boolean   @default(true)
  expiresAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  workspace        Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, code])
  @@index([workspaceId])
}

/// ---------------------------
/// Courses & Lessons
/// ---------------------------
model Course {
  id          String    @id @default(cuid())
  workspaceId String
  slug        String    @unique
  title       String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lessons     Lesson[]

  @@index([workspaceId])
}

model Lesson {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  content   Json
  order     Int
  isLocked  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId, order])
}

/// ---------------------------
/// Loyalty Stamps
/// ---------------------------
model LoyaltyStamp {
  id            String     @id @default(cuid())
  workspaceId   String
  subscriberId  String
  visits        Int        @default(0)
  lastScannedAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now())
  subscriber    Subscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)
  workspace     Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([subscriberId])
}

/// ---------------------------
/// Engagement Events
/// ---------------------------
model EngagementEvent {
  id          String    @id @default(cuid())
  workspaceId String
  type        String
  value       String?
  context     Json?
  createdAt   DateTime  @default(now())
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, type, createdAt])
}

model KCardLinkClick {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  kcardId   String
  linkId    String
  url       String
  referer   String?
  userAgent String?

  @@index([kcardId, createdAt])
  @@index([linkId, createdAt])
}

model WorkspaceTool {
  id          String    @id @default(cuid())
  workspaceId String
  toolId      String
  enabled     Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, toolId])
  @@index([workspaceId])
}

model KCardMessage {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  kcardId     String
  ownerId     String
  intentKey   String?
  intentLabel String?
  name        String?
  email       String?
  phone       String?
  message     String?
  isSpam      Boolean  @default(false)
  ipHash      String?
  userAgent   String?
  meta        Json?
  workspaceId String?

  @@index([workspaceId, createdAt])
  @@index([kcardId, createdAt])
  @@index([ownerId, createdAt])
}

enum Plan {
  FREE
  CREATOR
}

/// ---------------------------
/// Link Types
/// ---------------------------
enum LinkType {
  DEFAULT
  DOWNLOAD
  BOOKING
  COMMUNITY
  COURSE
  OTHER
}
