// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// ---------------------------
/// NextAuth models (keep these!)
/// ----------------------------
model User {
  id         String      @id @default(cuid())
  email      String      @unique
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  image      String?
  name       String?

  // Email + password auth (null for Google-only users)
  passwordHash   String?

  // Marketing consent (for “I agree to receive updates”)
  marketingOptIn Boolean   @default(false)

  accounts   Account[]
  kCards     KCard[]
  workspaces Workspace[]
  krCodes    KRCode[]
  sessions   Session[]
  menus      Menu[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

/// ---------------------------
/// Password Reset Flow
/// ---------------------------
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

/// ---------------------------
/// App models
/// ----------------------------

enum Plan {
  FREE
  CREATOR
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String

  bioPages         BioPage[]
  links            Link[]
  krCodes          KRCode[]
  subscriberLists  SubscriberList[]
  contactForms     ContactForm[]
  discountCodes    DiscountCode[]
  courses          Course[]
  loyaltyStamps    LoyaltyStamp[]
  engagementEvents EngagementEvent[]

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  plan Plan @default(FREE)

  // Billing / Stripe
  stripeCustomerId     String?
  stripeSubscriptionId String?

  @@index([ownerId])
  @@index([slug])
}

model ClickEvent {
  id        String   @id @default(cuid())
  linkId    String
  createdAt DateTime @default(now())
  ip        String?
  referer   String?
  userAgent String?

  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId, createdAt])
}

model BioPage {
  id          String    @id @default(cuid())
  workspaceId String
  slug        String    @unique
  title       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  theme       Json?

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

model KRCode {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  title       String?
  destination String
  shortCodeId String?
  style       Json?
  type        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
}

model KCard {
  id        String   @id @default(cuid())
  userId    String
  slug      String?  @unique
  isPublic  Boolean  @default(true)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Menu {
  id     String @id @default(cuid())
  userId String

  title       String
  slug        String  @unique
  description String?

  // Branding
  logoUrl       String?
  accentHex     String?
  backgroundHex String?

  // Menu structure
  sections Json

  scanCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

/// ---------------------------
/// Link Types
/// ---------------------------
enum LinkType {
  DEFAULT
  DOWNLOAD
  BOOKING
  COMMUNITY
  COURSE
  OTHER
}

model Link {
  id          String       @id @default(cuid())
  code        String?      @unique
  title       String?
  targetUrl   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)
  workspaceId String
  clicks      Int          @default(0)
  events      ClickEvent[]

  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  type   LinkType @default(DEFAULT)
  config Json?

  @@index([workspaceId])
  @@index([code])
  @@index([createdAt])
}

/// ---------------------------
/// Subscribers
/// ---------------------------
model SubscriberList {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  subscribers Subscriber[]

  @@index([workspaceId])
}

model Subscriber {
  id         String   @id @default(cuid())
  listId     String
  email      String?
  phone      String?
  sourceSlug String?
  sourceType String?
  tags       String[]
  createdAt  DateTime @default(now())

  list          SubscriberList @relation(fields: [listId], references: [id], onDelete: Cascade)
  loyaltyStamps LoyaltyStamp[]

  @@index([listId])
  @@index([email])
}

/// ---------------------------
/// Contact Forms
/// ---------------------------
model ContactForm {
  id          String   @id @default(cuid())
  workspaceId String
  title       String
  description String?

  includeName    Boolean @default(true)
  includeMessage Boolean @default(true)
  includePhone   Boolean @default(false)
  includeSubject Boolean @default(false)

  subjectOptions String[] @default([])
  tags           String[] @default([])

  buttonLabel       String?
  successMessage    String?
  notificationsEmail String?

  autoReplySubject String?
  autoReplyBody    String?

  accentHex    String?
  themeLayout  String?
  themeFont    String?
  themeCorners String?

  spamHoneypotEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  submissions ContactSubmission[]

  @@index([workspaceId])
}

model ContactSubmission {
  id      String   @id @default(cuid())
  formId  String

  name    String?
  email   String?
  phone   String?
  subject String?

  message String

  tags String[] @default([])
  meta Json?

  isSpam    Boolean  @default(false)
  createdAt DateTime @default(now())

  form ContactForm @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@index([formId, createdAt])
}

/// ---------------------------
/// Discount Codes
/// ---------------------------
model DiscountCode {
  id               String    @id @default(cuid())
  workspaceId      String
  code             String
  description      String?
  isSubscriberOnly Boolean   @default(false)
  isActive         Boolean   @default(true)
  expiresAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, code])
  @@index([workspaceId])
}

/// ---------------------------
/// Courses & Lessons
/// ---------------------------
model Course {
  id          String   @id @default(cuid())
  workspaceId String
  slug        String   @unique
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lessons   Lesson[]

  @@index([workspaceId])
}

model Lesson {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  content   Json
  order     Int
  isLocked  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId, order])
}

/// ---------------------------
/// Loyalty Stamps
/// ---------------------------
model LoyaltyStamp {
  id            String    @id @default(cuid())
  workspaceId   String
  subscriberId  String
  visits        Int       @default(0)
  lastScannedAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())

  workspace  Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  subscriber Subscriber @relation(fields: [subscriberId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([subscriberId])
}

/// ---------------------------
/// Engagement Events
/// ---------------------------
model EngagementEvent {
  id          String   @id @default(cuid())
  workspaceId String
  type        String
  value       String?
  context     Json?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, type, createdAt])
}

model KCardLinkClick {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  kcardId   String
  linkId    String
  url       String

  referer   String?
  userAgent String?

  @@index([kcardId, createdAt])
  @@index([linkId, createdAt])
}

