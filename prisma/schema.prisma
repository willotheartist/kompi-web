generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// ---------------------------
/// NextAuth models (keep these!)
/// ----------------------------
model User {
  id         String      @id @default(cuid())
  email      String      @unique
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  image      String?
  name       String?
  accounts   Account[]
  kCards     KCard[]
  workspaces Workspace[]
  krCodes    KRCode[]
  sessions   Session[] // <- back relation for Session.user

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

/// ---------------------------
/// App models
/// ----------------------------
model Workspace {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  ownerId   String
  bioPages  BioPage[]
  links     Link[]
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  krCodes   KRCode[]

  @@index([ownerId])
  @@index([slug])
}

model Link {
  id          String       @id @default(cuid())
  code        String?      @unique
  targetUrl   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)
  workspaceId String
  clicks      Int          @default(0)
  events      ClickEvent[]
  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([code])
  @@index([createdAt])
}

model ClickEvent {
  id        String   @id @default(cuid())
  linkId    String
  createdAt DateTime @default(now())
  ip        String?
  referer   String?
  userAgent String?
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId, createdAt])
}

model BioPage {
  id          String    @id @default(cuid())
  workspaceId String
  slug        String    @unique
  title       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  theme       Json?
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

model KRCode {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  title       String?
  destination String
  shortCodeId String?
  style       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
}

model KCard {
  id        String   @id @default(cuid())
  userId    String
  slug      String?  @unique
  isPublic  Boolean  @default(true)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
